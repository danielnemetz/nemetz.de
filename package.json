{
  "name": "nemetz.de",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:server": "tsx watch server/server.ts",
    "dev:full": "concurrently \"pnpm dev\" \"pnpm dev:server\"",
    "build": "tsc -p tsconfig.json && vite build && pnpm build:server",
    "build:server": "tsc -p tsconfig.server.json",
    "preview": "vite preview",
    "start:server": "node dist-server/server/server.js",
    "lint": "pnpm lint:ts && pnpm lint:styles && pnpm lint:html",
    "lint:ts": "eslint \"src/**/*.ts\"",
    "lint:styles": "stylelint \"src/**/*.{scss,css}\"",
    "lint:html": "htmlhint \"src/**/*.html\" \"public/**/*.html\"",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/http-proxy": "^1.17.17",
    "@types/node": "^24.10.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "htmlhint": "^1.7.1",
    "prettier": "^3.6.2",
    "sass": "^1.69.5",
    "stylelint": "^16.25.0",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-order": "^7.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.47.0",
    "vite": "^5.0.8",
    "vite-imagetools": "^9.0.0"
  },
  "dependencies": {
    "@fastify/compress": "^8.3.0",
    "@fastify/http-proxy": "^11.3.0",
    "@fastify/static": "^8.3.0",
    "eta": "^4.4.1",
    "fastify": "^5.6.2",
    "http-proxy": "^1.18.1",
    "linkedom": "^0.18.12"
  }
}
